{
  "name": "fw-crayons-extended",
  "version": "0.0.9",
  "description": "FW Extended Library",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/fw-crayons-extended/fw-crayons-extended.esm.js",
  "files": [
    "dist/",
    "loader/",
    "www/",
    "react/"
  ],
  "scripts": {
    "build:components": "stencil build --docs && npm run build:scss && npm run build:autoprefix && npm run build:min",
    "build": "npm run add:react && npm run build:components && npm run build:react",
    "build:autoprefix": "postcss dist/css/*.css --use autoprefixer --dir  dist/css/",
    "build:min": "cleancss -b dist/css/*.css dist/css/",
    "build:scss": "node-sass --include-path node_modules --include-path ../../node_modules --output-style compressed --recursive src/styles/global/ -o dist/css",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "build:react": "npm run compile:react",
    "clean:react": "rimraf react",
    "add:react": "rimraf react && npx mkdirp react",
    "compile:react": "npm run build:esm",
    "build:esm": "tsc --project tsconfig-react.json --module es6 --outDir react"
  },
  "dependencies": {
    "@stencil/core": "^2.8.0",
    "fw-crayons": "*"
  },
  "devDependencies": {
    "@stencil/react-output-target": "^0.1.0",
    "@stencil/sass": "^1.4.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.3.4",
    "babel-loader": "^8.2.2",
    "clean-css-cli": "^5.3.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "puppeteer": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "workbox-build": "^4.3.1"
  },
  "license": "MIT"
}
