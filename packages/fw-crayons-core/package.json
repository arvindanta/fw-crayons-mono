{
  "name": "fw-crayons",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/fw-crayons-core/fw-crayons-core.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build:components": "stencil build --docs && npm run build:scss && npm run build:autoprefix && npm run build:min",
    "build": "npm run build:components",
    "build:autoprefix": "postcss dist/css/*.css --use autoprefixer --dir  dist/css/",
    "build:min": "cleancss -b dist/css/*.css dist/css/",
    "build:scss": "node-sass --include-path node_modules --include-path ../../node_modules --output-style compressed --recursive src/styles/global/ -o dist/css",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "dependencies": {
    "@stencil/core": "^2.7.0",
    "npm": "^7.24.0"
  },
  "devDependencies": {
    "@stencil/react-output-target": "^0.1.0",
    "@stencil/sass": "^1.4.1",
    "@types/jest": "^26.0.24",
    "autoprefixer": "^10.3.4",
    "clean-css-cli": "^5.3.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "puppeteer": "^10.0.0",
    "workbox-build": "^4.3.1"
  },
  "license": "MIT"
}
